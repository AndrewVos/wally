%h2
  = @feature["name"]
- if @feature["path"]
  %p
    from
    %em
      = @feature["path"]
  %section{:class=>"scenarios"}
    %section{:class => 'feature'}
      :markdown
        #{@feature["description"]}
- if @feature["description"]
  %h2 Scenarios
  %ul
    - get_sorted_scenarios(@feature).each do |scenario|
      %li
        %a{:href => get_scenario_url(scenario)}
          = scenario["name"]
        - if scenario["tags"]
          = haml :tag_links, {:locals => {:tags => scenario["tags"]}, :layout => false}
